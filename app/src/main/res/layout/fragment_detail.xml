<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.contacts.DetailFragment"
    android:padding="20dp"
    android:orientation="vertical">

    <!-- Nombre -->

    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Nombre"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="" />

    <!-- Email -->

    <TextView
        android:id="@+id/lbl_email"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_name"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Email"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_email"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="1dp"
        android:padding="5dp"
        android:text="" />

    <!-- Username -->

    <TextView
        android:id="@+id/lbl_username"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_email"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="User"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_username"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_email"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="1dp"
        android:padding="5dp"
        android:text="" />

    <!-- Telefono -->

    <TextView
        android:id="@+id/lbl_phone"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_username"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Telefono"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_phone"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_username"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="1dp"
        android:padding="5dp"
        android:text="" />

    <!-- Sitio Web -->

    <TextView
        android:id="@+id/lbl_website"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_phone"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Sitio Web"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_website"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_phone"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="1dp"
        android:padding="5dp"
        android:text="" />


</RelativeLayout>